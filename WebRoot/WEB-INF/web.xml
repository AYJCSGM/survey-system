<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <welcome-file-list>
   <welcome-file>/WEB-INF/pages/login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>

    <servlet-name>doModifyServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoModifyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>modifyServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.ModifyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>voteServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.VoteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>doVoteServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoVoteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.AddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>doAddServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoAddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoRegServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoRegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logoutServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>doLoginServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>listServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.ListServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>doModifyServlet</servlet-name>
    <url-pattern>/m/doModify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>modifyServlet</servlet-name>
    <url-pattern>/m/modify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>voteServlet</servlet-name>
    <url-pattern>/m/vote</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doVoteServlet</servlet-name>
    <url-pattern>/m/doVote</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addServlet</servlet-name>
    <url-pattern>/m/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doAddServlet</servlet-name>
    <url-pattern>/m/doAdd</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoRegServlet</servlet-name>
    <url-pattern>/doReg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>doLoginServlet</servlet-name>
    <url-pattern>/doLogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>listServlet</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>
  
  <filter>
     <filter-name>exceptionFilter</filter-name>
     <filter-class>vip.itellyou.ui.filter.MyExceptionFilter</filter-class>   
  </filter>
  <filter-mapping>
      <filter-name>exceptionFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
     <filter-name>encodingFilter</filter-name>
     <filter-class>vip.itellyou.ui.filter.EncodingFilter</filter-class>
     <init-param>
         <param-name>encoding</param-name>
         <param-value>utf-8</param-value>
     </init-param>
  </filter>
  <filter-mapping>
      <filter-name>encodingFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
     <filter-name>autoLoginFilter</filter-name>
     <filter-class>vip.itellyou.ui.filter.AutoLoginFilter</filter-class>   
  </filter>
  <filter-mapping>
      <filter-name>autoLoginFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
     <filter-name>checkLoginFilter</filter-name>
     <filter-class>vip.itellyou.ui.filter.CheckLoginFilter</filter-class>   
  </filter>
  <filter-mapping>
      <filter-name>checkLoginFilter</filter-name>
      <url-pattern>/m/*</url-pattern>
  </filter-mapping>
  
  <filter>
     <filter-name>transFilter</filter-name>
     <filter-class>vip.itellyou.ui.filter.TransFilter</filter-class>   
  </filter>
  <filter-mapping>
      <filter-name>transFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <listener>
     <listener-class>vip.itellyou.ui.listener.OffLineListener</listener-class>
  </listener>
</web-app>